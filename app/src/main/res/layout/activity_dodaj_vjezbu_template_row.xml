<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="102dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="170dp"
                    android:minWidth="170dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    app:counterTextColor="@color/white"
                    app:endIconTint="@color/white"
                    app:helperTextTextColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:placeholderTextColor="@color/white"
                    app:prefixTextColor="@color/white"
                    app:startIconTint="@color/white"
                    app:suffixTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRadnaKilaza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/RadnaKilaza"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/gold"
                        android:textColorHint="@color/white"
                        android:textColorLink="@color/gold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="180dp"
                    android:minWidth="170dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:counterTextColor="@color/white"
                    app:endIconTint="@color/white"
                    app:helperTextTextColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:placeholderTextColor="@color/white"
                    app:prefixTextColor="@color/white"
                    app:startIconTint="@color/white"
                    app:suffixTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBrojPonavljanja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/BrojPonavljanja"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/gold"
                        android:textColorHint="@color/white"
                        android:textColorLink="@color/gold" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ivDeleteSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="21dp"
                    app:tint="@color/red"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_delete_forever_24" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>